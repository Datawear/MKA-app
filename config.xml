 <?xml version='1.0' encoding='utf-8'?>
<widget id="com.bettyblocks.mijnkantoorapp" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>MijnKantoorApp</name>
    <description>
        Mijn KantoorApp
    </description>
    <author email="chiel.wester@bettyblocks.com" href="https://www.bettyblocks.com">
        Betty Blocks - Building Apps Faster
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

    <allow-navigation href="*" />
</widget>